set encoding=utf-8
set noswapfile
execute 'set runtimepath+=' . expand('<sfile>:p:h:h')
let g:assert = themis#helper('assert')

nmap u     <Plug>(highlightedundo-undo)
nmap <C-r> <Plug>(highlightedundo-redo)
